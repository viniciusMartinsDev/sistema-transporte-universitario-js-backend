// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id        Int    @id @default(autoincrement())
    nome      String
    sobrenome String
    rg        String @unique
    cpf       String @unique
    email     String @unique
    senha     String

    transportes   Transporte[]
    passageiros   Passageiro[]
    listaControle ListaControle[]

    @@map("USUARIOS")
}

model Transporte {
    id                 Int      @id @default(autoincrement())
    saida              String
    destino            String
    periodo            String
    placa              String   @unique
    renavam            String
    numPoltronas       Int
    numPoltronasLivres Int
    modelo             String
    marca              String
    Usuario            Usuario? @relation(fields: [usuarioId], references: [id])
    usuarioId          Int?

    passageiros   Passageiro[]
    listaControle ListaControle[]

    @@map("TRANSPORTES")
}

model Passageiro {
    id           Int         @id @default(autoincrement())
    assento      String
    status       Boolean
    Usuario      Usuario?    @relation(fields: [usuarioId], references: [id])
    usuarioId    Int?
    Transporte   Transporte? @relation(fields: [transporteId], references: [id])
    transporteId Int?

    @@map("PASSAGEIROS")
}

model ListaControle {
    id           Int         @id @default(autoincrement())
    status       Boolean
    embarcado    Boolean
    data         DateTime    @default(now()) @db.Timestamp(0)
    Usuario      Usuario?    @relation(fields: [usuarioId], references: [id])
    usuarioId    Int?
    Transporte   Transporte? @relation(fields: [transporteId], references: [id])
    transporteId Int?

    @@map("LISTA_CONTROLE")
}
