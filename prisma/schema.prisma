// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id        Int    @id @default(autoincrement())
    nome      String
    sobrenome String
    rg        String
    cpf       String @unique
    email     String @unique
    senha     String

    transportes Transporte[]
    passageiros Passageiro[]

    @@map("USUARIOS")
}

model Transporte {
    id Int @id @default(autoincrement())

    placa                String
    renavam              String
    numPoltronas         String
    numPoltronasOcupadas String
    numPoltronasLivres   String
    modelo               String
    marcas               String
    Usuario              Usuario? @relation(fields: [usuarioId], references: [id])
    usuarioId            Int?

    passageiros Passageiro[]

    @@map("TRANSPORTES")
}

model Passageiro {
    id           Int         @id @default(autoincrement())
    assento      String
    status       Boolean
    Usuario      Usuario?    @relation(fields: [usuarioId], references: [id])
    usuarioId    Int?
    Transporte   Transporte? @relation(fields: [transporteId], references: [id])
    transporteId Int?

    @@map("PASSAGEIROS")
}
